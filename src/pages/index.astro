// and save it as 'hero-background.jpg' inside the 'src/assets/' directory.
import heroImageSrc from "../assets/hero_image.avif"
import Image from "astro/components/Image.astro"

const optimizedHeroImage = await getImage({
  src: heroImageSrc,
  widths: [480, 768, 1280, 2000],
  formats: ["avif", "webp"],
  quality: 80, // Adjust quality as needed
})

const heroStyle = `background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url(${heroImageSrc.src});`
console.log(optimizedHeroImage.options.src)
---

<BaseLayout
  title="Home"
  description="Luxury Interior Design Services for Modern Homes and Spaces"
>
  <!-- Hero Section -->
  <section class="hero" style={heroStyle}>
    <div class="hero-content">
      <h1>Elevate Your Space</h1>
